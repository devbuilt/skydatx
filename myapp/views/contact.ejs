<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
  <% include ../views/header.ejs %>
</head>
<% include ../views/mainnav.ejs %>

  <body>
    <div id="contact" class="">
      <div class="section__table">
        <div class="section__cell">
          <div class="container">
            <div class="section__heading row">
              <div class="col-xs-12 col-sm-5">
                <div class="overflow-hidden">
                  <div class="animation-item" data-animation-in="fadeInUp2" data-animation-in-delay="300" data-animation-out="fadeOutDown2" data-animation-out-delay="600">
                    <h2 class="section__title"> Get <span class="color">in</span> touch</h2>
                    <div class="hr"></div>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-6 col-sm-offset-1">
                <div class="overflow-hidden">
                  <div class="animation-item" data-animation-in="fadeInUp2" data-animation-in-delay="300" data-animation-out="fadeOutDown2" data-animation-out-delay="400">
                    <p class="section__caption"> Please tell us about your next project!</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="section__content row">
              <div class="col-xs-12 col-sm-5 col-md-4">
                <div class="contact-info overflow-hidden">
                  <div class="animation-item" data-animation-in="fadeInLeft" data-animation-in-delay="700" data-animation-out="fadeOutLeft" data-animation-out-delay="100">
                    <div class="contact-info__item"> <i class="ion-ipad"></i>
                      <h3>Phone number</h3>
                      <p>1-510-816-0512</p>
                    </div>
                    <div class="contact-info__item"> <i class="ion-paper-airplane"></i>
                      <h3>Email address</h3>
                      <p>Email : robduran@skydatx.com</p>
                    </div>
                    <div class="contact-info__item"> <i class="ion-map"></i>
                      <h3>Location</h3>
                      <p> Kensington, California 94707</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-6 col-sm-offset-1 col-md-offset-2">
                <div class="overflow-hidden">
                  <div class="animation-item" data-animation-in="fadeInRight" data-animation-in-delay="700" data-animation-out="fadeOutRight" data-animation-out-delay="100">
                    <form class="form-theme" id="formContact" id="searchInput" action="/about" method="POST">
                      <div class="row">
                        <div class="col-sm-6">
                          <div class="form-group required"> <label class="form-label" for="contactName">Name</label> <input class="form-control" class="enableOnInput" id="body" type="text" name="body"></div>
                        </div>
                        <div class="col-sm-6">
                          <div class="form-group required"> <label class="form-label" for="userEmail">Email</label> <input class="form-control" class="enableOnInput" id="userEmail" name="userEmail" type="text"></div>
                        </div>
                      </div>
                      <div class="form-group required"> <label class="form-label" for="contactMessage">Message</label> <input class="form-control" id="searchInput" class="enableOnInput" id="body" name="body" rows="4" name="message"></input>
                      </div> <button id="submit" class="btn btn-theme _circle _icon enableOnInput" class="enableOnInput" disabled="disabled" />Send Message</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% include ../views/footer.ejs %>
              <% include ../views/jslibraryvideo.ejs %>
